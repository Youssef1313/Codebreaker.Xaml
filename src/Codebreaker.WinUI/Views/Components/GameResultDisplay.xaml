        <StackPanel Orientation="Vertical" Visibility="{x:Bind GameMode, Mode=OneWay, Converter={StaticResource GameStatusToVisibilityConverter}, ConverterParameter=Won}">
            <Image Source="ms-appx:///Assets/Animations/WonAnimation_300_opt.gif"  MaxHeight="300" />
            <TextBlock Text="Congratulations - you won the game ðŸŽ‰ðŸ†" FontSize="{ThemeResource TextStyleExtraLargeFontSize}" HorizontalAlignment="Center" Margin="0,50,0,100" />
        </StackPanel>
        <StackPanel Orientation="Vertical" Visibility="{x:Bind GameMode, Mode=OneWay, Converter={StaticResource GameStatusToVisibilityConverter}, ConverterParameter=Lost}">
            <Image Source="ms-appx:///Assets/Animations/LostAnimation_300_opt.gif"  MaxHeight="300" />
            <TextBlock Text="Oh no - you lost the game ðŸ˜‘" FontSize="{ThemeResource TextStyleExtraLargeFontSize}" HorizontalAlignment="Center" Margin="0,50,0,100" />
